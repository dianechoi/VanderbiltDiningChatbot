FROM python:3
WORKDIR /app
COPY requirements.txt .
COPY requirementspip3.txt .
sudo -H pip3 install --ignore-installed PyYAML
RUN pip install --no-cache-dir -r requirements.txt
RUN pip3 install --no-cache-dir -r requirementspip3.txt

COPY . .
EXPOSE 5000
CMD python ./bot.py
